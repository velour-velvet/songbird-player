# File: .env.example
# When adding additional environment variables, update the schema in "/src/env.js"
# Next Auth
# You can generate a new secret using:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret

AUTH_SECRET="your-generated-secret"
PORT=3222

NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_NEXTAUTH_VERCEL_URL=https://your-vercel-domain.com
NEXT_PUBLIC_NEXTAUTH_URL_CUSTOM_SERVER=https://your-domain.com

AUTH_TRUST_HOST=true

# Next Auth Discord Provider
AUTH_DISCORD_ID="your-discord-app-id"
AUTH_DISCORD_SECRET="your-discord-app-secret"

# Drizzle Database Configuration
DB_ADMIN_USER="your-db-username"
DB_ADMIN_PASSWORD="your-db-password"
DB_HOST="your-db-host"
DB_PORT="your-db-port"
DB_NAME="your-database-name"
DB_OPTIONS="?sslmode=require"
# DATABASE_URL="postgres://user:password@host:port/database?sslmode=require"
OLD_DATABASE_URL="postgres://user:password@host:port/database?sslmode=require"
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
DATABASE_UNPOOLED="postgresql://user:password@host:port/database?sslmode=require"

API_V2_URL=http://127.0.0.1:3333/ # trailing slash required (server-only; was NEXT_PUBLIC_V2_API_URL)
SONGBIRD_API_KEY="your-songbird-api-key"

NEXT_PUBLIC_API_V2_HEALTH_URL=https://api-v2.your-domain.com/health # must be available from the web (Header health pill)